FROM node:alpine AS builder

ENV NODE_ENV production

ARG REACT_APP_UI_BASE_PREFIX
ARG REACT_APP_EXPRESS_BASE_PREFIX 
ARG REACT_APP_EXPRESS_API_OBSERVATIONS_ENDPOINT
ARG REACT_APP_EXPRESS_API_ROADS_ENDPOINT

ENV REACT_APP_EXPRESS_BASE_PREFIX=${REACT_APP_EXPRESS_BASE_PREFIX}
ENV REACT_APP_UI_BASE_PREFIX=${REACT_APP_UI_BASE_PREFIX}
ENV REACT_APP_EXPRESS_API_OBSERVATIONS_ENDPOINT=${REACT_APP_EXPRESS_API_OBSERVATIONS_ENDPOINT}
ENV REACT_APP_EXPRESS_API_ROADS_ENDPOINT=${REACT_APP_EXPRESS_API_ROADS_ENDPOINT}


WORKDIR /app

COPY package.json ./

RUN yarn install --frozen-lockfile --production

COPY . .

RUN yarn build

FROM nginx:alpine

EXPOSE 80

COPY --from=builder /app/build /usr/share/nginx/traffic-analyzer-web-app

COPY nginx.conf /etc/nginx/conf.d/default.conf



